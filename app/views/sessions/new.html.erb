<h1>Sign in</h1>

<%= form_for(:session, url: signin_path) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <% if @game.present? %>
    <%= hidden_field_tag :game, @game.permalink %>
  <% end %>

  <div class="actions">
    <%= f.submit 'Sign in' %>
  </div>
<% end %>

<br />
Not yet registered?
<% if @game.nil? %>
  <%= link_to "Sign up", signup_path %> here.
<% else %>
  <%= link_to "Sign up", signup_path(:game => @game.permalink) %> here.
<% end %>