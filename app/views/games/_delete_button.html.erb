<%= link_to 'Delete Game', game, :method => 'delete', :class => 'button red-button' %>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    var deleteGameBlock = true // disable standard execution of delete button
    $('a.red-button').on('click',function() {
      if (deleteGameBlock) {
        $.jconfirm({
          title: 'Are you sure you want to delete this game?',
          confirm: 'Yes',
          cancel: 'No',
        }, function() {
          deleteGameBlock = false // enable standard execution of delete button
          $('a.red-button')[0].click()
        })
        return false
      }
    })
  })
</script>